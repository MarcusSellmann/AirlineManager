<Page x:Class="AirlineManager.UI.Pages.MaintenancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:nGantt="clr-namespace:nGantt;assembly=nGantt"
      xmlns:local="clr-namespace:AirlineManager.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Maintenance">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <nGantt:GanttControl 
            x:Name="ganttUserControl" 
            TaskSelectionMode="Single" 
            AllowUserSelection="False" 
            AllowDrop="False"
            Grid.Row="0" />
        <Button 
            Name="btnAddMaintenanceService" 
            Click="btnAddMaintenanceService_Click"
            Grid.Row="1"
            Margin="10"
            Content="Add service" />
    </Grid>
</Page>
