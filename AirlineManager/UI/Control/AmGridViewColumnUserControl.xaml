<GridViewColumn x:Class="AirlineManager.UI.Control.AmGridViewColumnUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirlineManager.UI.Control"
             mc:Ignorable="d">

    <GridViewColumn.CellTemplate>
        <DataTemplate>
            <TextBlock Text="{Binding Text}" Foreground="{StaticResource AmListViewColumnItemTextColor}" />
        </DataTemplate>
    </GridViewColumn.CellTemplate>
</GridViewColumn>
